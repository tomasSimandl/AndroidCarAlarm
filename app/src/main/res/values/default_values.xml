<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- CAN BE CHANGED WITH USER SETTING WHICH IS STORED IN SHARED PREFERENCES -->

    <!-- Maximal value of amplitude which not invoke alarm -->
    <integer name="default_max_ok_amplitude">15000</integer>

    <!-- How often is control last measured amplitude in SoundDetector (in milliseconds) -->
    <integer name="default_sound_detector_interval">1000</integer>

    <!-- Maximal euclidean distance between two last measurement which not trigger alarm -->
    <item name="default_move_sensor_sensitivity" format="float" type="dimen">0.2</item>

    <!-- Interval in which application receive location updates. -->
    <integer name="default_location_update_interval">3000</integer>

    <!-- Fastest interval in which application receive location updates. -->
    <integer name="default_max_location_update_interval">1000</integer>

    <!-- Priority constant of LocationProvider. Determines location sensor accuracy. -->
    <integer name="default_location_accuracy_priority">100</integer> <!--LocationProvider.PRIORITY_HIGH_ACCURACY-->

    <!-- Interval for which will be other detections ignored in Alarm. -->
    <integer name="default_alarm_ignore_interval">1000</integer>

    <!-- Interval before alarm will be triggered after detection. -->
    <integer name="default_alarm_alert_interval">15000</integer>

    <!-- Interval before alarm will be activated after alarm activation. -->
    <integer name="default_alarm_start_interval">30000</integer>

    <!-- Indicates if location provider can be used. -->
    <bool name="default_util_is_location_provider_available">true</bool>

    <!-- Indicates if move detector can be used. -->
    <bool name="default_util_is_move_detector_available">true</bool>

    <!-- Indicates if sound detector can be used. -->
    <bool name="default_util_is_sound_detector_available">true</bool>


    <!-- Indicates if messages can be send by default if there is no value in shared preferences. -->
    <bool name="default_communication_can_send_message">true</bool> <!-- TODO change to false in production -->

    <!-- List of active communication providers. Name must be equal to provider class name. -->
    <string-array name="default_communication_active_providers">
        <item>SmsProvider</item>
    </string-array>




    <!-- CAN NOT CHANGE WITH VALUE FROM SHARED PREFERENCES -->

    <!-- Dimensions of measured data from accelerometer -->
    <integer name="default_move_sensor_dimensions">3</integer>





</resources>