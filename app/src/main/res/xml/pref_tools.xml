<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sample="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:key="alarm_category" android:title="@string/pref_tools_alarm_group_name">

        <SwitchPreference
            android:defaultValue="@bool/default_alarm_is_allowed"
            android:key="@string/key_alarm_is_allowed"
            android:title="@string/pref_tools_alarm_switch_title"
            android:contentDescription="@string/pref_tools_alarm_switch_description"/>

        <com.pavelsikun.seekbarpreference.SeekBarPreferenceCompat
            android:key="@string/key_alarm_start_interval"
            android:title="@string/pref_tools_alarm_start_interval_title"
            android:summary="@string/pref_tools_alarm_start_interval_description"
            android:dependency="@string/key_alarm_is_allowed"
            android:defaultValue="@integer/default_alarm_start_interval"

            sample:msbp_minValue="0"
            sample:msbp_maxValue="120000"
            sample:msbp_interval="1000"
            sample:msbp_measurementUnit="ms"
            sample:msbp_dialogEnabled="false"/>

        <com.pavelsikun.seekbarpreference.SeekBarPreferenceCompat
            android:key="@string/key_alarm_alert_interval"
            android:title="@string/pref_tools_alarm_alert_interval_title"
            android:summary="@string/pref_tools_alarm_alert_interval_description"
            android:dependency="@string/key_alarm_is_allowed"
            android:defaultValue="@integer/default_alarm_alert_interval"

            sample:msbp_minValue="0"
            sample:msbp_maxValue="60000"
            sample:msbp_interval="1000"
            sample:msbp_measurementUnit="ms"
            sample:msbp_dialogEnabled="false"/>

    </PreferenceCategory>


    <PreferenceCategory android:key="tracker_category" android:title="@string/pref_tools_tracker_group_name">

        <SwitchPreference
            android:defaultValue="@bool/default_tracker_is_allowed"
            android:key="@string/key_tracker_is_allowed"
            android:title="@string/pref_tools_alarm_switch_title"
            android:contentDescription="@string/pref_tools_tracker_switch_description"/>

        <com.pavelsikun.seekbarpreference.SeekBarPreferenceCompat
            android:key="@string/key_tracker_ignore_distance"
            android:title="@string/pref_tools_tracker_ignore_distance_title"
            android:summary="@string/pref_tools_tracker_ignore_distance_description"
            android:dependency="@string/key_tracker_is_allowed"
            android:defaultValue="@integer/default_tracker_ignore_distance"

            sample:msbp_minValue="0"
            sample:msbp_maxValue="20"
            sample:msbp_interval="1"
            sample:msbp_measurementUnit="m"
            sample:msbp_dialogEnabled="false"/>

        <com.pavelsikun.seekbarpreference.SeekBarPreferenceCompat
            android:key="@string/key_tracker_timeout"
            android:title="@string/pref_tools_tracker_timeout_title"
            android:summary="@string/pref_tools_tracker_timeout_description"
            android:dependency="@string/key_tracker_is_allowed"
            android:defaultValue="@integer/default_tracker_timeout"

            sample:msbp_minValue="5000"
            sample:msbp_maxValue="300000"
            sample:msbp_interval="1000"
            sample:msbp_measurementUnit="ms"
            sample:msbp_dialogEnabled="false"/>

    </PreferenceCategory>

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

</PreferenceScreen>
